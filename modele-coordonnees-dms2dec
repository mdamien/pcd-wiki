|{{#if:{{#switch:{{#titleparts:{{{1}}}|1|3}}|N|S|E|W=y}}
|{{#expr:{{#switch:{{#titleparts:{{{1}}}|1|3}}|N|E=1|S|W=-1}}*({{#titleparts:{{{1}}}|1|1}}+{{#titleparts:{{{1}}}|1|2}}/60) round (3+{{precision1|{{#titleparts:{{{1}}}|1|2}}}})}}
|{{#if:{{#switch:{{#titleparts:{{{1}}}|1|2}}|N|S|E|W=y}}
