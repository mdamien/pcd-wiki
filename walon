poéis = [[Bergike]], [[Franche]], [[Étots-Unis]]

régions = [[Urope]] ([[Région walonne]], [[Ardinnes (départemint)|Ardinnes]]), [[Anmérikes|Anmérike]] ([[Wisconsin]])

